        <!-- services -->
        <record model="ir.ui.view" id="booking_services_view">
            <field name="name">booking.services.view</field>
            <field name="model">booking.services</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <widget name="web_ribbon" title="غير مفعل" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <div class="oe_button_box" name="button_box">
                                <button name="toggle_active" type="object" string="مفعل" class="oe_stat_button" icon="fa-bell">
                                    <field name="active"  widget="boolean_button"/>
                                </button>
                            </div>
                            <group>
                                <field name="name" />
                            </group>
                        </sheet>
                    </form>
            </field>
        </record>

        <record id="booking_services_tree_view" model="ir.ui.view">
            <field name="name">booking_services_tree_view</field>
            <field name="model">booking.services</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                
                </tree>
            </field>
        </record>
        <record id="booking_services_search_view" model="ir.ui.view">
            <field name="name">البحث في</field>
            <field name="model">booking.services</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string=" البحث في ">
                    <field name="name" />
                
                    <separator/>
                    <filter string="القاعات الغير مفعلة" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_booking_services_view" model="ir.actions.act_window">
            <field name="name">انواع الخدمات</field>
            <field name="res_model">booking.services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="booking_services_tree_view"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to create new service Type
                </p>
            </field>
        </record>



        <menuitem id="booking_services_menu" name="انواع الخدمات" parent="hotel_car_setup_menu"
                action="action_booking_services_view" sequence="2"/>


        <!-- departments -->
        <record model="ir.ui.view" id="booking_departments_view">
            <field name="name">booking.departments.view</field>
            <field name="model">booking.departments</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <widget name="web_ribbon" title="غير مفعل" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                            <div class="oe_button_box" name="button_box">
                                <button name="toggle_active" type="object" string="مفعل" class="oe_stat_button" icon="fa-bell">
                                    <field name="active"  widget="boolean_button"/>
                                </button>
                            </div>
                            <group>
                                <field name="name" />
                                <field name="dept_price" />
                                <field name="max_discount_percentage" />
                            
                            </group>
                             <group>
                                <field name="tax_ids" />
                                <field name="product_id" context="{'default_type':'service'}" />
                            </group>
                            <notebook>
                                <page string="مكونات الخدمة">
                                    <field name="lines">
                                        <tree editable="bottom">
                                            <field name="product_id" context="{'default_type':'service','default_booking_flag': True}" />
                                           <field name="person_count" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                    </form>
            </field>
        </record>

        <record id="booking_departments_tree_view" model="ir.ui.view">
            <field name="name">booking_departments_tree_view</field>
            <field name="model">booking.departments</field>
            <field name="arch" type="xml">
                <tree string="انواع الباقات">
                    <field name="name" />
                    <field name="dept_price" />
                    <field name="max_discount_percentage" />
                    <field name="tax_ids" />
                    <field name="product_id" context="{'default_type':'service'}" />
                </tree>
            </field>
        </record>
        <record id="booking_departments_search_view" model="ir.ui.view">
            <field name="name">البحث في</field>
            <field name="model">booking.departments</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string=" البحث في ">
                    <field name="name" />
                    <field name="dept_price" />
                    <field name="max_discount_percentage" />
                    <field name="tax_ids" />
                    <field name="product_id" context="{'default_type':'service'}" />
                   
                </search>
            </field>
        </record>

        <record id="action_booking_departments_view" model="ir.actions.act_window">
            <field name="name">الباقة</field>
            <field name="res_model">booking.departments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="booking_departments_tree_view"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to create new service Type
                </p>
            </field>
        </record>



        <menuitem id="booking_departments_menu" name="الباقات" parent="hotel_car_setup_menu"
                action="action_booking_departments_view" sequence="3"/>


    </data>
</odoo>