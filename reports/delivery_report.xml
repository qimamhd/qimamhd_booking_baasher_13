<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <report
        id="booking_delivery_report"
        string="Product labels 15x10cm"
        model="booking.delivery.report.view"
        report_type="qweb-pdf"
         name="qimamhd_booking_13.booking_delivery_report_temp"
        file="qimamhd_booking_13.booking_delivery_report_temp"
    />

    <template id="booking_delivery_report_temp">
            <t t-call="web.html_container">
				
				 
				  
				<t t-if="docs and 'company_id' in docs">
					<t t-set="company" t-value="docs.company_id"/>
				</t>
				<t t-if="not docs or not 'company_id' in docs">
					<t t-set="company" t-value="res_company"/>
				</t>
				<div class="header">
					<t t-if="branch_id.branch_header">
						 
						<img t-if="branch_id.branch_header" t-att-src="'data:image/png;base64,%s' % to_text(branch_id.branch_header)" style="max-height:200px;height:140px;width:1000px;"/>
						 
					</t>
					<t t-else="">
							<t t-if="company.header_image">
								<img t-if="company.header_image" t-att-src="'data:image/png;base64,%s' % to_text(company.header_image)" style="max-height:200px;height:140px;width:1000px;"/>
							</t>
							<t t-else="">
								<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 80px;"/>
								<div>
									<span t-field="company.partner_id"/>
									<br/>
									<span t-field="company.partner_id.street"/>
									<br/>
									<span t-field="company.partner_id.street2"/>
									<br/>
									<span t-field="company.partner_id.city"/>
									<br/>
									<span t-field="company.partner_id.country_id"/>
									<br/>
									<span t-field="company.partner_id.vat"/>
									<br/>
								</div>
							</t>
					</t>
					
				</div>
				<div class="footer">
					<t t-if="branch_id.branch_footer">
						<img t-if="branch_id.branch_footer" t-att-src="'data:image/png;base64,%s' % to_text(branch_id.branch_footer)" style="max-height:200px;height:140px;width:1000px;"/>
					</t>
					<t t-else="">
						<t t-if="company.footer_image">
							<img t-if="company.footer_image" t-att-src="'data:image/png;base64,%s' % to_text(company.footer_image)" style="max-height: 180px;"/>
						</t>
					</t>
					
				</div>

			<t t-call="web.external_layout">
		<style>
	.content-table {
		border-collapse: collapse;
		margin: 25px 0;
		font-size: 0.9em;
		min-width: 400px;
		border-radius: 5px 5px 0 0;
		overflow: hidden;
		box-shadow: 0 0 20px rgba(0, 0 , 0, 0.15);
	}
	.content-table thead tr {
		background-color:#4EC392;
		color: black;
		text-align: left;
		font-weight: bold;
	}

	.content-table th ,
	.content-table td {
		padding: 12px 15px;
		text-align: center;
	}
	.content-table tbody tr {
		border-bottom: 1px solid #dddddd;
	}
	.content-table tbody tr:nth-of-type(even){
		background-color: #f3f3f3;
		color: black;
		font-weight: bold;
	}
	.content-table tbody tr:last-of-type{
		border-bottom:2px solid lightgray
	}
	#table1 {
		border-collapse: collapse;"
		width:100%;
	}
	#table1, th, td {
	  border: 1px solid gray;
	}
	</style>

	<!--                <t t-set="count" t-value="1" />-->
				<br/>
				<t t-foreach="docs" t-as="o">
						<h5>
								<center>
									<span style="text-decoration-line: underline;text-decoration-style: double;">  سند استلام <br/> Delivery Note  </span>
								</center>
							</h5>
							<br/>
						<h6> <lift>
                            <strong>سند استلام للعقد رقم </strong> : <span t-esc="o['booking']"/>
							</lift>
                        </h6>
						<br/>
						<strong> العميل : <span t-esc="o['customer']"/> </strong>

						<table style="border: 0px solid white;background-color:white;width:100%;text-align:center;margin:20px;">
							<tr style="border: 0px solid white;background-color:white">
								<td style="border: 0px solid white;background-color:white"> <strong> التاريخ :</strong> </td>
								<td style="border: 0px solid white;background-color:white"><span t-esc="o['date_order']"/></td>
								<td style="border: 0px solid white;background-color:white"> <strong> الوقت: </strong> </td>
								<td style="border: 0px solid white;background-color:white"> --------------------------------------- </td>
							</tr>
						</table>
					   <br/>
						<!--  <t t-set="l_seq" t-value="0"/>  -->
						<table id="table1" style="width:100%;">
						<thead style="width:100%; border: 1px solid;border-collapse: collapse;">
							<th class="text-center" style="width:60%;">  <strong>  الـبيــان  </strong> </th>
							<th class="text-center" style="width:20%;">  <strong>  الكـمية  </strong> </th>
							<th class="text-center" style="width:20%;">  <strong>  ملاحــظــات  </strong> </th>

						</thead>
						 
						 <t t-foreach="o['lines']" t-as="line">
							 <tr style="width:100%; border: 1px solid;border-collapse: collapse;">
								<!--	<t t-set="l_seq" t-value="l_seq+1"/>
									<td  style="font-size:12px; color:black;">

										<span t-esc="l_seq"/>
									</td > -->
									<td style="font-size:12px">
									   <span t-esc="line['product_name']"/>
									</td>
									<td style="font-size:12px">
									   <span t-esc="line['qty']"/>
									</td>
									<td>

									</td>
								</tr>
							</t>
						</table>
						</t>
						<br/>
						<br/>
						<br/>
						<table style="border: 0px solid white;background-color:white;width:100%;text-align:center">
									<tr style="border: 0px solid white;background-color:white;">
										<td style="border: 0px solid white;background-color:white"> الموصل</td>
										<td style="border: 0px solid white;background-color:white"> المستلم </td>
										<td style="border: 0px solid white;background-color:white"> توقيع المستلم </td>
									</tr>
									<tr style="border: 0px solid white;background-color:white">
										<td style="border: 0px solid white;background-color:white"> --------------------------------------- </td>
										<td style="border: 0px solid white;background-color:white"> --------------------------------------- </td>
										<td style="border: 0px solid white;background-color:white"> --------------------------------------- </td>
									</tr>
						</table>
						<br/>
						<strong> ملاحظة: </strong>
						<p>  الشركة/المؤسسة غير مسؤلة عن البضاعة بعد استلام العميل</p>

				</t>

			</t>
    </template>


</odoo>
